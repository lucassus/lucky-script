expression : term ((PLUS | MINUS) term)*

term       : factor ((MULTIPLY | DIVIDE) factor)*

factor     : (PLUS | MINUS) factor
           | power

power      : primary (POWER factor)*

primary    : NUMBER
           | "(" expression ")"

// Operators

PLUS     : "+"
MINUS    : "-"
MULTIPLY : "*"
DIVIDE   : "/"
POWER    : "**"

%import common.WS_INLINE
%import common.NUMBER

%ignore WS_INLINE
